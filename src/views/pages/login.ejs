<!-- src/views/pages/login.ejs -->
<div class="login-container">
    <div class="login-form">
        <h2>Inicia sesión</h2>
        <p>Completa los siguientes campos para ingresar</p>



        <!-- Formulario de login -->
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Nombre de usuario</label>
                <input type="text" id="username" name="username" placeholder="Ingresa tu nombre de usuario" required>
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña mayor a 6 caracteres" required>
            </div>

            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>

        <p class="signup-link">
            ¿No tienes cuenta? <a href="/register">Crear cuenta</a>
        </p>
    </div>
</div>